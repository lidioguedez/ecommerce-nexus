{
  "name": "ecommerce-nexus",
  "version": "1.0.0",
  "description": "E-commerce Nexus: MVP Architecture demonstrating microservices, DDD, and modern software architecture",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:product\" \"npm run dev:order\" \"npm run dev:search\"",
    "dev:product": "cd services/product-service && npm run dev",
    "dev:order": "cd services/order-service && npm run dev",
    "dev:search": "cd services/search-service && npm run dev",
    "build": "npm run build:product && npm run build:order && npm run build:search",
    "build:product": "cd services/product-service && npm run build",
    "build:order": "cd services/order-service && npm run build",
    "build:search": "cd services/search-service && npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit --passWithNoTests",
    "test:integration": "jest tests/integration --passWithNoTests",
    "test:e2e": "jest tests/e2e --passWithNoTests",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "k8s:deploy": "kubectl apply -f infrastructure/k8s/",
    "lint": "eslint . --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "microservices",
    "ddd",
    "ecommerce",
    "typescript",
    "golang",
    "rabbitmq",
    "elasticsearch",
    "kubernetes",
    "docker"
  ],
  "author": "E-commerce Nexus Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}